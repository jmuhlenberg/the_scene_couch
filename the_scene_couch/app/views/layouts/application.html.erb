<!DOCTYPE html>
<html>
  <head>
    <title>the scene couch</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="site-container">
      <header>
        <div class="banner"></div>
      </header>
      <nav class='navbar'>
        <div class="navbar-menu">
          <div class="navbar-start">
            <a class='navbar-item' href="<%= root_url %>">Home</a>
          </div>
          <div class="navbar-end">
            <% if @current_user %>
            <div class="navbar-item">
              <span class='user-welcome'>welcome <%=@current_user.username%>!  </span>
              <form action="<% session.clear %>">
                <input class='button' type="submit" value="LOG OUT">
              </form>
            </div>
            <% else %>
              <a class='navbar-item' href="/users/new">Sign Up</a>
              <a class='navbar-item' href="/session/new">Sign In</a>
            <% end %>
          </div>
        </div>
      </nav>
      <%= yield %>
    </div>
  </body>
</html>
